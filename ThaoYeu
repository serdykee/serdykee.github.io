<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Táº¡o áº¢nh TÃ¬nh YÃªu</title>
  <style>
    body {
      font-family: Arial;
      text-align: center;
      margin-top: 50px;
    }
    canvas {
      border: 1px solid #ccc;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Táº¡o áº¢nh TÃ¬nh YÃªu</h1>
  <input type="text" id="nameInput" placeholder="Nháº­p tÃªn cá»§a báº¡n"><br><br>
  <button onclick="generateImage()">Táº¡o áº£nh</button>

  <canvas id="canvas" width="500" height="300" style="display:none;"></canvas>
  <div id="result" style="margin-top: 20px;"></div>

  <script>
    function generateImage() {
      const name = document.getElementById('nameInput').value;
      if (!name) return alert('Vui lÃ²ng nháº­p tÃªn!');

      // Váº½ áº£nh trÃªn canvas
      const canvas = document.getElementById('canvas');
      const ctx = canvas.getContext('2d');
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Background
      ctx.fillStyle = '#fce4ec';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Text
      ctx.fillStyle = '#d81b60';
      ctx.font = 'bold 28px Arial';
      ctx.fillText(`TÃ¬nh yÃªu cá»§a ${name}`, 50, 150);

      // Hiá»‡n canvas vÃ  áº£nh
      canvas.style.display = 'block';

      const imgURL = canvas.toDataURL();
      document.getElementById('result').innerHTML = `
        <p>áº¢nh cá»§a báº¡n:</p>
        <img src="${imgURL}" width="300"><br><br>
        <a href="${generateShareLink(name)}" target="_blank">ðŸ”— Link chia sáº»</a>
      `;
    }

    function generateShareLink(name) {
      const data = {
        t: [name],
        a: "nca" // báº¡n cÃ³ thá»ƒ tÃ¹y Ã½ thay Ä‘á»•i
      };
      const base64 = btoa(JSON.stringify(data));
      return window.location.origin + window.location.pathname + '?b=' + base64;
    }

    // Load tá»« base64 náº¿u cÃ³
    window.onload = function () {
      const params = new URLSearchParams(window.location.search);
      if (params.has('b')) {
        try {
          const decoded = JSON.parse(atob(params.get('b')));
          if (decoded.t && decoded.t.length) {
            document.getElementById('nameInput').value = decoded.t[0];
            generateImage();
          }
        } catch (e) {
          console.error('Invalid base64');
        }
      }
    };
  </script>
